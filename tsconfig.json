{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~assets": ["./assets"],
      "~assets/*": ["./assets/*"],
      "~components/*": ["./components/*"],
      "~components": ["./components"],
      "~constants/*": ["./constants/*"],
      "~constants": ["./constants"],
      "~helpers/*": ["./helpers/*"],
      "~helpers": ["./helpers"],
      "~hooks/*": ["./hooks/*"],
      "~hooks": ["./hooks"],
      "~models/*": ["./models/*"],
      "~models": ["./models"],
      "~modules/*": ["./modules/*"],
      "~modules": ["./modules"],
      "~libs/*": ["./libs/*"],
      "~libs": ["./libs"],
      "~store/*": ["./store/*"],
      "~store": ["./store"],
      "~pages/*": ["./pages/*"],
      "~pages": ["./pages"]
    },
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest",
      "vite-plugin-svgr/client"
      // "@testing-library/jest-dom" // todo: this line causes conflicts in global variables between jest & vitest, but is should provide type definitions for the matchers and IDE auto completion
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src",
    "vite.config.ts",
    "test/setupTests.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ]
}
